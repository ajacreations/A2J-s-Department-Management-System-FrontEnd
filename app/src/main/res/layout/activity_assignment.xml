<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Assignment">

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/teachercode"
        android:layout_width="347dp"
        android:layout_height="33dp"
        android:text="You can submit your assignments here..."
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="italic"/>
    <EditText
        android:id="@+id/name"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:hint="Name"
        android:textColor="#000"
        android:textSize="17dp"/>
    <EditText
        android:id="@+id/subject"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:hint="Subject"
        android:textColor="#000"
        android:textSize="17dp"/>
    <EditText
        android:id="@+id/des"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:hint="Description"
        android:textColor="#000"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_marginLeft="80dp"
        android:text="Upload Assignment" />

    <TextView
        android:id="@+id/txtFile"
        android:text="file name"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="20dp" style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@+id/upload">
    </ProgressBar>

    <Button
        android:id="@+id/assi_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:layout_marginLeft="100dp"
        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/instr"
        android:layout_width="347dp"
        android:layout_height="33dp"
        android:text="INSRUCTIONS"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        />



</LinearLayout>