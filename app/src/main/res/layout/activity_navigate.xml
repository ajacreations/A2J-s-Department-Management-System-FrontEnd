<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".navigate">
    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationview"
        android:theme="@style/navigation"
        android:background="#00000000"
        app:menu="@menu/side_menu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/detail"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/stu_det" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:fontFamily="times"
                    android:text="Student Detail"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/noti" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:fontFamily="times"
                    android:text="Notification"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/leave"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/leave" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:fontFamily="times"
                    android:text="Request Leave"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/table"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/timetable" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:fontFamily="times"
                    android:text="Time Table"
                    android:textAlignment="center" />
            </LinearLayout></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/assig"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/assi_veri" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:fontFamily="times"
                    android:text="Assignments"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/atten"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/atten" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:fontFamily="times"
                    android:text="Attendance"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>